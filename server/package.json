{
  "name": "ultras-server",
  "version": "1.0.0",
  "description": "The server for the ultras app",
  "main": "build/index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "dev": "nodemon",
    "prod": "pm2 start build/index.js --name ultras-api",
    "test": "echo Error: no test specified && exit 1",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint-fix && npm run lint"
    }
  },
  "author": "@ultras",
  "license": "ISC",
  "devDependencies": {
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.0.3",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescripft-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "nodemon": "^2.0.12",
    "onchange": "^7.1.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "module-alias": "^2.2.2"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "dotenv": "^10.0.0",
    "knex": "^0.95.11",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1"
  },
  "_moduleAliases": {
    "@root": "./src",
    "config": "src/config",
    "controllers": "src/controllers",
    "modules": "src/modules",
    "routes": "src/routes",
    "sdks": "src/sdks",
    "services": "src/services",
    "utils": "src/utils",
    "types": "src/types",
    "middlewares": "src/middlewares",
    "@constants": "src/config/constants.ts"
  }
}