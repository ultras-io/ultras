{
  "name": "@ultras/aws-lambda-s3-image-resizer",
  "version": "1.0.0",
  "description": "Image processing lambda function for Ultras Core API.",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm install sharp --platform=linux --arch=x64 --ignore-scripts=false --foreground-scripts --verbose",
    "build": "npm run build:source && npm run build:deps",
    "build:source": "npm run build:cleanup && tsc --rootDir source",
    "build:deps": "cp .npmrc ./build; cp package.json ./build; cp -r node_modules ./build",
    "build:cleanup": "rimraf ./build",
    "prettier-format": "prettier --config .prettierrc 'source/**/*.(ts|js)' --write",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@ultras/services": "^1.0.0",
    "aws-sdk": "^2.1077.0",
    "sharp": "^0.31.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.19",
    "@types/sharp": "^0.29.5",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "4.4.4"
  }
}
