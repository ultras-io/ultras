{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "typeRoots": ["./node_modules/@types"],
    "module": "commonjs",
    // "rootDir": "src",
    // "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
